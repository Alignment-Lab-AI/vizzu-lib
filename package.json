{
  "name": "vizzu",
  "type": "module",
  "description": "Vizzu is a free, open-source Javascript/C++ library utilizing a generic dataviz engine that generates many types of charts and seamlessly animates between them. It can be used to create static charts but more importantly it is designed for building animated data stories and interactive explorers as Vizzu enables showing different perspectives of the data that the viewers can easily follow due to the animation.",
  "keywords": [
    "chart",
    "charts",
    "dataviz",
    "charting-library",
    "dashboard",
    "animation",
    "storytelling",
    "data-visualization",
    "data-analysis",
    "charting",
    "datavisualization"
  ],
  "homepage": "https://lib.vizzuhq.com/",
  "url": "https://github.com/vizzuhq/vizzu-lib/issues",
  "email": "hello@vizzuhq.com",
  "license": "Apache-2.0",
  "author": "Vizzu Inc.",
  "main": "dist/vizzu.min.js",
  "types": "dist/vizzu.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/vizzuhq/vizzu-lib.git"
  },
  "scripts": {
    "init-js": "npm install",
    "init-py": "pdm install",
    "init-src": "npm run init-js",
    "init": "npm-run-all init-js",
    "lock-js": "npm update",
    "lock-py": "pdm lock --no-default -d",
    "lock": "npm-run-all lock-js",
    "fix-format-src-js": "npx prettier --config .prettierrc -w src test project/js .prettierrc .eslintrc.cjs",
    "format-src-js": "npx prettier --config .prettierrc -c src test project/js .prettierrc .eslintrc.cjs",
    "fix-format-docs-js": "npx prettier --config .prettierrc -w docs",
    "format-docs-js": "npx prettier --config .prettierrc -c docs",
    "fix-format-docs-py": "python ./tools/ci/std_check.py mdformat --wrap 80 --end-of-line keep --line-length 70 docs README.md CONTRIBUTING.md CODE_OF_CONDUCT.md FAQ.md PROJECTS.md",
    "format-docs-py": "python ./tools/ci/std_check.py mdformat --wrap 80 --end-of-line keep --line-length 70 --check docs README.md CONTRIBUTING.md CODE_OF_CONDUCT.md FAQ.md PROJECTS.md",
    "fix-format-tools-js": "npx prettier --config .prettierrc -w tools/type .github",
    "format-tools-js": "npx prettier --config .prettierrc -c tools/type .github",
    "fix-format-src": "npm-run-all fix-format-src-js",
    "format-src": "npm-run-all format-src-js",
    "fix-format-docs": "npm-run-all fix-format-docs-js fix-format-docs-py",
    "format-docs": "npm-run-all format-docs-js format-docs-py",
    "fix-format-tools": "npm-run-all fix-format-tools-js",
    "format-tools": "npm-run-all format-tools-js",
    "fix-format": "npm-run-all fix-format-src fix-format-docs fix-format-tools",
    "format": "npm-run-all format-src format-docs format-tools",
    "fix-lint-src-js": "npx eslint --fix --ext .js,.cjs,.mjs --config .eslintrc.cjs src test project/js .eslintrc.cjs",
    "lint-src-js": "npx eslint --ext .js,.cjs,.mjs --config .eslintrc.cjs src test project/js .eslintrc.cjs",
    "fix-lint-docs-js": "npx eslint --fix --ext .js,.cjs,.mjs --config .eslintrc.cjs docs",
    "lint-docs-js": "npx eslint --ext .js,.cjs,.mjs --config .eslintrc.cjs docs",
    "fix-lint-tools-js": "npx eslint --fix --ext .js,.cjs,.mjs --config .eslintrc.cjs tools/type",
    "lint-tools-js": "npx eslint --ext .js,.cjs,.mjs --config .eslintrc.cjs tools/type",
    "fix-lint-src": "npm-run-all fix-lint-src-js",
    "lint-src": "npm-run-all lint-src-js",
    "fix-lint-docs": "npm-run-all fix-lint-docs-js",
    "lint-docs": "npm-run-all lint-docs-js",
    "fix-lint-tools": "npm-run-all fix-lint-tools-js",
    "lint-tools": "npm-run-all lint-tools-js",
    "fix-lint": "npm-run-all fix-lint-src fix-lint-docs fix-lint-tools",
    "lint": "npm-run-all lint-src lint-docs lint-tools",
    "type-gen-presets": "export NODE_PATH=node_modules; node tools/type/gen-presets.cjs",
    "type-gen-dts": "export NODE_PATH=node_modules; node tools/type/gen-dts.cjs",
    "type-dts": "npx check-dts example/lib/**",
    "type-src": "npm-run-all type-gen-presets type-gen-dts type-dts",
    "type": "npm-run-all type-src",
    "pkg-rollup": "npx rollup --config project/js/rollup.config.cjs",
    "pkg-build": "npm-run-all type-gen-presets type-gen-dts pkg-rollup",
    "jsonly-download-cvizzu": "wget 'https://vizzu-lib-main.storage.googleapis.com/lib/cvizzu.js' -O example/lib/cvizzu.js && wget 'https://vizzu-lib-main.storage.googleapis.com/lib/cvizzu.wasm' -O example/lib/cvizzu.wasm",
    "jsonly-pkg-build": "find example/lib -type f -name '*.js' ! -name 'cvizzu.js' -exec sh -c 'rm -f \"$@\"' sh {} + && cp src/apps/weblib/js-api/* example/lib/ && npm run -s pkg-build",
    "test-unit-src-js": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' npx jest --config test/unit/jest.config.js --verbose",
    "test-unit-test-js": "npx jest --config=./test/integration/modules/jest.config.cjs --verbose",
    "test-man": "node test/integration/man.cjs",
    "test": "node test/integration/test.cjs"
    
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "eslint": "^8.49.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "yaml": "^2.3.2",
    "js-yaml": "^4.1.0",
    "check-dts": "^0.7.2",
    "rollup": "^3.29.2",
    "@rollup/plugin-terser": "^0.4.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.1",
    "aggregate-error": "^5.0.0",
    "ajv": "^8.12.0",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "p-limit": "^4.0.0",
    "pngjs": "^7.0.0",
    "serve-static": "^1.15.0",
    "strip-color": "^0.1.0",
    "yargs": "^17.7.2",
    "node-fetch": "<3.0.0",
    "puppeteer": "^21.3.1"
  }
}
