# docker build -t vizzu/vizzu-dev-wasm:0.8 -f tools/ci/docker/vizzu-dev-wasm .
# docker push vizzu/vizzu-dev-wasm:0.8

# docker build -t vizzu/vizzu-dev-wasm -f tools/ci/docker/vizzu-dev-wasm .
# docker run -i -t -v .:/workspace vizzu/vizzu-dev-wasm bash

FROM ubuntu:22.04

RUN apt-get update;

RUN apt-get install -y python3.10
RUN ln -s /usr/bin/python3.10 /usr/bin/python
RUN ln -s /usr/bin/python3.10 /usr/bin/python3

RUN apt-get install -y git wget cmake build-essential
WORKDIR /root
RUN git clone https://github.com/emscripten-core/emsdk.git
WORKDIR /root/emsdk
RUN  ./emsdk install 3.1.41
RUN  ./emsdk activate 3.1.41
RUN echo "source \"/root/emsdk/emsdk_env.sh\"" >> /root/.bashrc

WORKDIR /workspace/
